@model TargetsMvc.ViewModels.GridVM;

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        td {
            width: 50px; 
            height: 50px;
            text-align: center;
            border: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <h2>Initial Grid View</h2>
    @Html.ActionLink("Update Grid", "Update", new {  })
    <table>
        @for (int i = 0; i < Model.Grid.GetLength(0); i++)
        {
            <tr>
                @for (int j = 0; j < Model.Grid.GetLength(1); j++)
                {
                    <td style="background-color:@(!string.IsNullOrEmpty(Model.Grid[i, j]) ? "lightblue" : "white");">
                        @if (!string.IsNullOrEmpty(Model.Grid[i, j]))
                        {
                            <img src="@Model.Grid[i, j]" alt="Agent/Target" width="50" height="50" />
                        }
                    </td>
                }
            </tr>
        }
    </table>
</body>
</html>
